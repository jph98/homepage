<!DOCTYPE html>
<html lang="en">

{{> header }}

<body class="black">

  {{> navbar }}

  <div class="container firstcontainer">
    <div class="row">
      <div class="section">
        <h1 class="header white-text">Posts</h1>        
        <p>Posts, articles and writing in the technology, music or development space.</p>
        <img src='./images/interim3.png' style='width: 100%'>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="section">    
          {{#blog}}
            <h4 class='grey-text' style='margin-top: 60px;'>{{name}}</h4>
            <p style='margin-bottom: 50px'>{{description}}</p>
            {{#posts}}
              <h5 class="white-text" style='margin-top: 30px'>
                <a href={{link}}>{{title}}</a>
              </h5>
            {{/posts}}
          {{/blog}}
        <div>
          <div class="row">
            <div class="section">
              <h4 class='grey-text' style='margin-top: 60px;'>More Articles</h4>
              <a href='https://medium.com/@jonathan.holloway'>Me on Medium</a>
              <br><br>
              <img src='./images/interim-me.png' style='width: 100%'>
            </div>
          </div>          
        </div>

      </div>

    </div>
  </div>

  

  {{> footer }}

  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="js/materialize.js"></script>
  <script src="js/init.js"></script>

  <script src="js/map.js"/>
    
  </body>
</html>

